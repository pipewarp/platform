{
  "name": "@lcase/desktop",
  "private": true,
  "version": "0.1.0-alpha.6",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "pack": "electron-builder --dir",
    "make": "electron-builder",
    "make:mac:unsigned": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "clean": "rimraf dist dist-electron out"
  },
  "build": {
    "appId": "com.lowercase.desktop",
    "productName": "lowercase Desktop",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "afterSign": "build/notarize.js",
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "Your Company, Inc."
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "@lcase/controller": "workspace:*",
    "@lcase/runtime": "workspace:*",
    "bufferutil": "^4.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "utf-8-validate": "^6.0.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@lcase/ports": "workspace:*",
    "@lcase/types": "workspace:*",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.2",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "rimraf": "^6.1.0",
    "typescript": "^5.2.2",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
