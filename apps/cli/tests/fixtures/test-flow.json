{
  "name": "stt-flow",
  "start": "transcribe",
  "steps": {
    "transcribe": {
      "type": "action",
      "tool": "stt-client",
      "op": "transcribe",
      "args": {
        "text": "alligator"
      },
      "on": {
        "success": "second",
        "failure": "second"
      }
    },
    "second": {
      "type": "action",
      "tool": "stt-client",
      "op": "transcribe",
      "args": {
        "text": "${steps.transcribe.text}"
      }
    }
  }
}
