{
  "name": "stt-flow",
  "start": "first",
  "steps": {
    "first": {
      "type": "action",
      "tool": "stt-client",
      "op": "unknown-op",
      "args": {
        "text": "first text"
      },
      "on": {
        "success": "second",
        "failure": "third"
      }
    },
    "second": {
      "type": "action",
      "tool": "stt-client",
      "op": "transcribe",
      "args": {
        "text": "${steps.first.text}"
      }
    },
    "third": {
      "type": "action",
      "tool": "stt-client",
      "op": "transcribe",
      "args": {
        "text": "it failed"
      }
    }
  }
}
