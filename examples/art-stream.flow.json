{
  "name": "art-stream",
  "start": "mario",
  "steps": {
    "mario": {
      "type": "action",
      "tool": "unicode",
      "op": "draw",
      "args": {
        "delayMs": 200,
        "useStream": true
      },
      "pipe": {
        "to": {
          "step": "luigi",
          "payload": "params.message"
        }
      }
    },
    "luigi": {
      "type": "action",
      "tool": "transform",
      "op": "transform",
      "args": {
        "art": "$.pipe",
        "isStreaming": true,
        "delayMs": 10
      },
      "pipe": {
        "from": {
          "step": "mario",
          "buffer": 2
        }
      }
    }
  }
}
