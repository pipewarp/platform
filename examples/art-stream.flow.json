{
  "name": "art-stream",
  "start": "mario",
  "steps": {
    "mario": {
      "type": "action",
      "tool": "unicode",
      "op": "draw",
      "args": {
        "delayMs": 200,
        "useStream": true
      },
      "pipe": {
        "to": "luigi"
      }
    },
    "luigi": {
      "type": "action",
      "tool": "transform",
      "op": "transform",
      "args": {
        "art": "${steps.mario.text}",
        "isStreaming": true,
        "delayMs": 10
      },
      "pipe": {
        "from": "mario",
        "to": "print"
      }
    }
  }
}
